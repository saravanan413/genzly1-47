
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // ========================
    // 1. Profile Pictures
    // ========================
    match /profilePictures/{userId}/{fileName} {
      allow read: if true;
      allow create: if request.auth != null && request.auth.uid == userId
        && request.resource.size < 100 * 1024 * 1024;
      allow update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // ========================
    // 2. Post Media (Images/Videos)
    // ========================
    match /posts/{postId}/{fileName} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.size < 100 * 1024 * 1024;
      allow update, delete: if request.auth != null
        && get(/databases/$(database)/documents/posts/$(postId)).data.userId == request.auth.uid;
    }

    // ========================
    // 3. Reels (Short Videos)
    // ========================
    match /reels/{reelId}/{fileName} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.size < 100 * 1024 * 1024;
      allow update, delete: if request.auth != null
        && get(/databases/$(database)/documents/reels/$(reelId)).data.userId == request.auth.uid;
    }

    // ========================
    // 4. Stories (Images/Videos)
    // ========================
    match /stories/{storyId}/{fileName} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.size < 100 * 1024 * 1024;
      allow update, delete: if request.auth != null
        && get(/databases/$(database)/documents/stories/$(storyId)).data.userId == request.auth.uid;
    }

    // ========================
    // 5. Chat Media (Images/Audio/Video)
    // ========================
    match /chats/{chatId}/{messageId}/{fileName} {
      allow read: if request.auth != null
        && (request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants);
      allow create: if request.auth != null && request.resource.size < 100 * 1024 * 1024;
      allow update, delete: if request.auth != null
        && (request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants);
    }

    // ========================
    // 6. Default Deny
    // ========================
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
